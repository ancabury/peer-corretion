#table
  - if @papers.any?
    %table.table.table-bordered.table-hover
      %thead
      %tr
        %th Name
        %th Uploader
        %th Upload date
        %th Grade
        %th Action
      %tbody
        = render partial: 'paper', collection: @papers
      %tfoot
        %tr
          %td{colspan: 5}
            = "Count: #{@papers.count}"
  - else
    There are no papers to show.
