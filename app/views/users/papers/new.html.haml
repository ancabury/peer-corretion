%h2.span5
  Add new paper

.correction-content
  = simple_form_for @paper, url: users_user_papers_path(current_user), multipart: true do |f|
    .form-inputs
      .form-group
        .row
          .col-md-1
            %label.text.optional{:for => "paper_name"} Name
          .col-md-6
            = f.input :name, label: false
      .form-group
        .row
          .col-md-1
            %label.text.optional{:for => "paper_paper_file"} Paper File
          .col-md-6
            = f.input :paper_file, as: :file, label: false

    .form-actions
      = f.button :submit, "Upload", class: "btn-primary"

