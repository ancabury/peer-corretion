%h2 Sign in
= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .form-inputs
    = f.input :email, autofocus: true
    = f.input :password, autocomplete: "off"
    - if devise_mapping.rememberable?
      = f.check_box :remember_me
      = f.label :remember_me
  .form-actions
    = f.submit "Sign in"
